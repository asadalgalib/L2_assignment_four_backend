model Booking {
  id          String  @id @default(uuid())
  tutorId     String
  tutor       User    @relation("TutorBookings", fields: [tutorId], references: [id])
  studentId   String
  user        User    @relation("UserBookings", fields: [studentId], references: [id])
  start_date  String
  end_date    String
  total_price Int
  status      BOOKING @default(CONFIRMED)

  @@index([tutorId])
  @@index([studentId])
}

enum BOOKING {
  CONFIRMED
  COMPLETED
  CANCELED
}
